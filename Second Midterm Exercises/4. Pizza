#include<iostream>
#include<cstring>
using namespace std;

enum sizePizza {
    small = 0,
    family = 2,
    big = 3
};

class Pizza {
protected:
    char name[20];
    char ingredients[100];
    double pricePizza;

public:
    Pizza(const char *name = "", char *ingredients = "", double pricePizza = 0.0) {
        strcpy(this->name, name);
        strcpy(this->ingredients, ingredients);
        this->pricePizza = pricePizza;
    }

    virtual float price() = 0;

    bool operator< (Pizza &other) {
        return this->price() < other.price();
    }
};

class FlatPizza : public Pizza {
private:
    sizePizza size;

public:
    FlatPizza(const char *name = "", char *ingredients = "", double pricePizza = 0.0, sizePizza size = small) : Pizza(name,ingredients,pricePizza) {
        this->size = (sizePizza) size;
    }

    float price() {
        if(size == 0) {
            return pricePizza + (pricePizza * 0.1);
        }
        else if(size == 2) {
            return pricePizza + (pricePizza * 0.3);
        }
        else {
            return pricePizza + (pricePizza * 0.5);
        }
    }

    friend ostream &operator<< (ostream &out, FlatPizza &other) {
        out << other.name << ": " << other.ingredients << ", ";

        if(other.size == 0) {
            out << "small ";
        }
        else if(other.size == 1) {
            out << "big ";
        }
        else {
            out << "family ";
        }

        out << "- " << other.price() << endl;
        return out;
    }
};

class FoldedPizza : public Pizza {
private:
    bool isWhiteFlour;

public:
    FoldedPizza(const char *name = "", char *ingredients = "", double pricePizza = 0.0, bool isWhiteFlour = true) : Pizza(name,ingredients,pricePizza) {
        this->isWhiteFlour = isWhiteFlour;
    }

    float price() {
        if(isWhiteFlour) {
            return pricePizza + (pricePizza * 0.1);
        }

        return pricePizza + (pricePizza * 0.3);
    }

    void setWhiteFlour (bool newWhiteFlour) {
        this->isWhiteFlour = newWhiteFlour;
    }

    friend ostream &operator<< (ostream &out, FoldedPizza &other) {
        out << other.name << ": " << other.ingredients << ", ";

        if(other.isWhiteFlour) {
            out << "wf - " << other.price() << endl;
        }
        else {
            out << "nwf - " << other.price() << endl;
        }

        return out;
    }
};

void expensivePizza(Pizza **pizzas, int n) {
    Pizza *mostExpensive = pizzas[0];

    for(int i=1; i<n; i++) {
        if(*mostExpensive < *pizzas[i]) {
            mostExpensive = pizzas[i];
        }
    }

    FlatPizza *casted1 = dynamic_cast<FlatPizza *>(mostExpensive);
    if(casted1 != 0) {
        cout << *casted1;
    }

    else {
        FoldedPizza *casted2 = dynamic_cast<FoldedPizza *>(mostExpensive);
        cout << *casted2;
    }
}

int main() {
  int test_case;
  char name[20];
  char ingredients[100];
  float inPrice;
  sizePizza size;
  bool whiteFlour;

  cin >> test_case;
  if (test_case == 1) {
    // Test Case FlatPizza - Constructor, operator <<, price
    cin.get();
    cin.getline(name,20);
    cin.getline(ingredients,100);
    cin >> inPrice;
    FlatPizza fp(name, ingredients, inPrice);
    cout << fp;
  } else if (test_case == 2) {
    // Test Case FlatPizza - Constructor, operator <<, price
    cin.get();
    cin.getline(name,20);
    cin.getline(ingredients,100);
    cin >> inPrice;
    int s;
    cin>>s;
    FlatPizza fp(name, ingredients, inPrice, (sizePizza)s);
    cout << fp;

  } else if (test_case == 3) {
    // Test Case FoldedPizza - Constructor, operator <<, price
    cin.get();
    cin.getline(name,20);
    cin.getline(ingredients,100);
    cin >> inPrice;
    FoldedPizza fp(name, ingredients, inPrice);
    cout << fp;
  } else if (test_case == 4) {
    // Test Case FoldedPizza - Constructor, operator <<, price
    cin.get();
    cin.getline(name,20);
    cin.getline(ingredients,100);
    cin >> inPrice;
    FoldedPizza fp(name, ingredients, inPrice);
    fp.setWhiteFlour(false);
    cout << fp;

  } else if (test_case == 5) {
	// Test Cast - operator <, price
    int s;

    cin.get();
    cin.getline(name,20);
    cin.getline(ingredients,100);
    cin >> inPrice;
    cin>>s;
    FlatPizza *fp1 = new FlatPizza(name, ingredients, inPrice, (sizePizza)s);
    cout << *fp1;

    cin.get();
    cin.getline(name,20);
    cin.getline(ingredients,100);
    cin >> inPrice;
    cin>>s;
    FlatPizza *fp2 = new FlatPizza(name, ingredients, inPrice, (sizePizza)s);
    cout << *fp2;

    cin.get();
    cin.getline(name,20);
    cin.getline(ingredients,100);
    cin >> inPrice;
    FoldedPizza *fp3 = new FoldedPizza(name, ingredients, inPrice);
    cout << *fp3;

    cin.get();
    cin.getline(name,20);
    cin.getline(ingredients,100);
    cin >> inPrice;
    FoldedPizza *fp4 = new FoldedPizza(name, ingredients, inPrice);
    fp4->setWhiteFlour(false);
    cout << *fp4;

    cout<<"Lower price: "<<endl;
    if(*fp1<*fp2)
        cout<<fp1->price()<<endl;
    else cout<<fp2->price()<<endl;

    if(*fp1<*fp3)
        cout<<fp1->price()<<endl;
    else cout<<fp3->price()<<endl;

    if(*fp4<*fp2)
        cout<<fp4->price()<<endl;
    else cout<<fp2->price()<<endl;

    if(*fp3<*fp4)
        cout<<fp3->price()<<endl;
    else cout<<fp4->price()<<endl;

  } else if (test_case == 6) {
	// Test Cast - expensivePizza
    int num_p;
    int pizza_type;

    cin >> num_p;
    Pizza **pi = new Pizza *[num_p];
    for (int j = 0; j < num_p; ++j) {

      cin >> pizza_type;
      if (pizza_type == 1) {
        cin.get();
        cin.getline(name,20);

        cin.getline(ingredients,100);
        cin >> inPrice;
        int s;
        cin>>s;
        FlatPizza *fp = new FlatPizza(name, ingredients, inPrice, (sizePizza)s);
        cout << (*fp);
        pi[j] = fp;
      }
      if (pizza_type == 2) {

        cin.get();
        cin.getline(name,20);
        cin.getline(ingredients,100);
        cin >> inPrice;
        FoldedPizza *fp =
            new FoldedPizza (name, ingredients, inPrice);
        if(j%2)
          (*fp).setWhiteFlour(false);
        cout << (*fp);
        pi[j] = fp;

      }
    }

    cout << endl;
    cout << "The most expensive pizza:\n";
    expensivePizza(pi,num_p);
  }
  return 0;
}
